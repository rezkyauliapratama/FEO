<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_margin="@dimen/margin_normal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_height_expendable_imageview"
            android:background="@color/colorBlue_100">

            <com.app.infideap.stylishwidget.view.ATextView
                android:id="@+id/textview_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textAppearance="@style/TextStyle.Medium"
                android:textStyle="bold"
                android:textColor="@color/colorBlack_1000"
                android:text="Title"
                />

            <com.app.infideap.stylishwidget.view.ATextView
                android:id="@+id/textview_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBlue_600"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/margin_normal"
                android:textAppearance="@style/TextStyle.Small"
                android:textStyle="bold"
                android:text="Title"
                android:textColor="@color/colorWhite"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    </layout>
