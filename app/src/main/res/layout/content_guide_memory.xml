                    android:textColor="@color/colorBlack_1000"
                    android:text="@string/guide_memory_4"
                    android:layout_weight="0.95"/>

            </LinearLayout>


            <android.support.v4.widget.Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_xsmall" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextStyle.Small"
                    android:textColor="@color/colorBlack_1000"
                    
                    android:text="5."
                    android:layout_weight="0.05"/>

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextStyle.Small"
                    android:textColor="@color/colorBlack_1000"
                    android:text="@string/guide_memory_5"
                    android:layout_weight="0.95"/>

            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_xsmall" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextStyle.Small"
