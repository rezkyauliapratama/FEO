<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/margin_small"
            android:background="@color/colorWhite"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextStyle.Small"
                    android:textColor="@color/colorBlack_1000"
                    
                    android:text="1."
                    android:layout_weight="0.05"/>

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextStyle.Small"
                    android:textColor="@color/colorBlack_1000"
                    android:text="@string/guide_memory_1"
                    android:layout_weight="0.95"/>

            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_xsmall" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextStyle.Small"
                    android:textColor="@color/colorBlack_1000"
                    
                    android:text="2."
                    android:layout_weight="0.05"/>

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextStyle.Small"
                    android:textColor="@color/colorBlack_1000"
                    android:text="@string/guide_memory_2"
                    android:layout_weight="0.95"/>

            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_xsmall" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextStyle.Small"
                    android:textColor="@color/colorBlack_1000"
                    
                    android:text="3."
                    android:layout_weight="0.05"/>

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextStyle.Small"
