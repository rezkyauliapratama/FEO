<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_margin="@dimen/margin_normal">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_xxsmall"
                android:orientation="vertical"
                android:paddingTop="@dimen/margin_small">


                <com.app.infideap.stylishwidget.view.ATextView
                    android:id="@+id/textview_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textAppearance="@style/TextStyle.Medium"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack_1000"
                    android:text="Title"
                    />
                <com.app.infideap.stylishwidget.view.ATextView
                    android:id="@+id/textview_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textAppearance="@style/TextStyle.Medium"
                    android:textStyle="italic"
                    android:textColor="@color/colorBlack_1000"
                    android:text="Title"
                    />
                
                <android.support.v4.widget.Space
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_small" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_image_xxlarge"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>


                <android.support.v4.widget.Space
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_small" />

                <com.app.infideap.stylishwidget.view.ATextView
                    android:id="@+id/textView_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextStyle.Medium"
                    android:textColor="@color/colorBlack_1000"
                    android:padding="@dimen/margin_small"
                    android:text="Title"/>

                <com.app.infideap.stylishwidget.view.ATextView
                    android:id="@+id/buttonSubscribe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Button.Accent.Fill"
                    android:text="Subscribe"
                    android:textAppearance="@style/TextStyle.Medium"/>
            </LinearLayout>

        </FrameLayout>

    </android.support.v7.widget.CardView>
</layout>
