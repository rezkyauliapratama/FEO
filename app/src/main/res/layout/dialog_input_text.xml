<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">
            <EditText
                android:id="@+id/edittext_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:lines="20"
                style="@style/Base.V12.Widget.AppCompat.EditText"
                android:textColor="@color/colorBlack_1000"
                android:hint="@string/pleaseinputyourtextinhere"
                android:textColorHint="@color/colorGrey_500"
                android:fontFamily="sans-serif"
                />

    <com.app.infideap.stylishwidget.view.AButton
        android:id="@+id/button_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Button.Info.Fill"
        android:text="@string/ok"/>
</LinearLayout>
</layout>