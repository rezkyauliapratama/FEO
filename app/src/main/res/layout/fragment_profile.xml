<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:padding="@dimen/margin_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/expired_in_s"
                    android:textAppearance="@style/TextStyle.Medium"
                    android:textColor="@color/colorBlack_1000"
                    android:layout_weight="0.3"
                    />

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textAppearance="@style/TextStyle.Medium"
                    android:textColor="@color/colorBlack_1000"
                    android:layout_weight="0.1"
                    />

                <com.app.infideap.stylishwidget.view.ATextView
                    android:id="@+id/textView_timeExpired"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/dots"
                    android:textAppearance="@style/TextStyle.Medium"
                    android:textColor="@color/colorBlack_1000"
                    android:layout_weight="0.6"
                    />

            </LinearLayout>
            <android.support.v4.widget.Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_small" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small"
                >

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/account"
                    android:textColor="@color/colorBlack_1000"
                    android:textAppearance="@style/TextStyle.Medium"/>

                <ImageView
                    android:id="@+id/button_changeAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:scaleType="fitCenter"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>



            <android.support.v4.widget.Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/username"
                    android:textAppearance="@style/TextStyle.Medium"
                    android:textColor="@color/colorBlack_1000"
                    android:layout_weight="0.3"
                    />

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textAppearance="@style/TextStyle.Medium"
                    android:textColor="@color/colorBlack_1000"
                    android:layout_weight="0.1"
                    />

                <com.app.infideap.stylishwidget.view.ATextView
                    android:id="@+id/textView_username"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.EditText"
                    android:text="@string/dots"
                    android:textAppearance="@style/TextStyle.Medium"
                    android:textColor="@color/colorBlack_1000"
                    android:layout_weight="0.6"
                    />



            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_small"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textAppearance="@style/TextStyle.Medium"
                    android:textColor="@color/colorBlack_1000"
                    android:layout_weight="0.3"
                    />

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textAppearance="@style/TextStyle.Medium"
                    android:textColor="@color/colorBlack_1000"
                    android:layout_weight="0.1"
                    />

                <com.app.infideap.stylishwidget.view.ATextView
                    android:id="@+id/textView_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.EditText"
                    android:text="@string/dots"
                    android:textAppearance="@style/TextStyle.Medium"
                    android:textColor="@color/colorBlack_1000"
                    android:layout_weight="0.6"
                    />



            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_small" />


            <com.app.infideap.stylishwidget.view.ATextView
                android:id="@+id/button_changePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextStyle.Small"
                android:gravity="center"
                android:text="@string/change_password"
                android:textColor="@color/colorBlue_800"
                android:textStyle="italic"/>

            <android.support.v4.widget.Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_small" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small"
                >

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/information"
                    android:textColor="@color/colorBlack_1000"
                    android:textAppearance="@style/TextStyle.Medium"/>

                <ImageView
                    android:id="@+id/button_changeInformation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:scaleType="fitCenter"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>



            <android.support.v4.widget.Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_small" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/full_name"
                    android:textAppearance="@style/TextStyle.Medium"
                    android:textColor="@color/colorBlack_1000"
                    android:layout_weight="0.3"
                    />

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textAppearance="@style/TextStyle.Medium"
                    android:textColor="@color/colorBlack_1000"
                    android:layout_weight="0.1"
                    />

                <com.app.infideap.stylishwidget.view.ATextView
                    android:id="@+id/textView_fullname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.EditText"
                    android:text="@string/dots"
                    android:textAppearance="@style/TextStyle.Medium"
                    android:textColor="@color/colorBlack_1000"
                    android:layout_weight="0.6"
                    />



            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/school_name"
                    android:textAppearance="@style/TextStyle.Medium"
                    android:textColor="@color/colorBlack_1000"
                    android:layout_weight="0.3"
                    />

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textAppearance="@style/TextStyle.Medium"
                    android:textColor="@color/colorBlack_1000"
                    android:layout_weight="0.1"
                    />

                <com.app.infideap.stylishwidget.view.ATextView
                    android:id="@+id/textView_schoolName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.EditText"
                    android:text="@string/dots"
                    android:textAppearance="@style/TextStyle.Medium"
                    android:textColor="@color/colorBlack_1000"
                    android:layout_weight="0.6"
                    />



            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_small" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/class_name"
                    android:textAppearance="@style/TextStyle.Medium"
                    android:textColor="@color/colorBlack_1000"
                    android:layout_weight="0.3"
                    />

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textAppearance="@style/TextStyle.Medium"
                    android:textColor="@color/colorBlack_1000"
                    android:layout_weight="0.1"
                    />

                <com.app.infideap.stylishwidget.view.ATextView
                    android:id="@+id/textView_className"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.EditText"
                    android:text="@string/dots"
                    android:textAppearance="@style/TextStyle.Medium"
                    android:textColor="@color/colorBlack_1000"
                    android:layout_weight="0.6"
                    />



            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/school_address"
                    android:textAppearance="@style/TextStyle.Medium"
                    android:textColor="@color/colorBlack_1000"
                    android:layout_weight="0.3"
                    />

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textAppearance="@style/TextStyle.Medium"
                    android:textColor="@color/colorBlack_1000"
                    android:layout_weight="0.1"
                    />

                <com.app.infideap.stylishwidget.view.ATextView
                    android:id="@+id/textView_schoolAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.EditText"
                    android:text="@string/dots"
                    android:textAppearance="@style/TextStyle.Medium"
                    android:textColor="@color/colorBlack_1000"
                    android:layout_weight="0.6"
                    />

            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/home_address"
                    android:textAppearance="@style/TextStyle.Medium"
                    android:textColor="@color/colorBlack_1000"
                    android:layout_weight="0.3"
                    />

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textAppearance="@style/TextStyle.Medium"
                    android:textColor="@color/colorBlack_1000"
                    android:layout_weight="0.1"
                    />

                <com.app.infideap.stylishwidget.view.ATextView
                    android:id="@+id/textView_homeAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.EditText"
                    android:text="@string/dots"
                    android:textAppearance="@style/TextStyle.Medium"
                    android:textColor="@color/colorBlack_1000"
                    android:layout_weight="0.6"
                    />

            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_normal" />

            <com.app.infideap.stylishwidget.view.ATextView
                android:id="@+id/button_changeLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextStyle.Small"
                android:gravity="center"
                android:text="@string/change_language"
                android:textColor="@color/colorBlue_800"
                android:textStyle="italic"/>

        </LinearLayout>
    </ScrollView>

</layout>